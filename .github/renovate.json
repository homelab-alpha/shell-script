{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Amsterdam",
  "schedule": "before 5am every weekday",
  "extends": [
    "config:recommended",
    "schedule:weekly",
    "group:allNonMajor",
    ":automergeMinor",
    ":automergePatch"
  ],
  "assignees": ["homelab-alpha"],
  "rangeStrategy": "auto",
  "ignoreDeps": [],
  "labels": ["dependencies"],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking change", "P0: critical"],
      "automerge": false,
      "automergeType": "squash"
    },
    {
      "matchUpdateTypes": ["minor"],
      "labels": ["dependencies", "P1: high"],
      "automerge": false,
      "automergeType": "squash"
    },
    {
      "matchUpdateTypes": ["patch"],
      "labels": ["dependencies", "P3: low"],
      "automerge": false,
      "automergeType": "squash"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor"],
      "labels": ["dependencies", "P2: moderate"],
      "automerge": false,
      "automergeType": "squash"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "labels": ["dependencies", "P4: negligible"],
      "automerge": false,
      "automergeType": "squash"
    }
  ]
}
